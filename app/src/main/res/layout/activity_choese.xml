<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".ui.ChoeseActivity">


    <ImageView
        android:id="@+id/splash_imageView"
        android:layout_width="228.59dp"
        android:layout_height="228.59dp"
        android:layout_marginTop="104dp"
        android:src="@drawable/logo"
        app:civ_border_color="#FF000000"
        app:civ_border_width="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/choese_company_button"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="88dp"
        android:background="@drawable/shape_btn"
        android:text="Company"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/splash_imageView" />

    <Button
        android:id="@+id/choese_pos_button"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/shape_btn"
        android:text="POS"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/choese_company_button"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/choese_company_button"
        app:layout_constraintTop_toBottomOf="@+id/choese_company_button" />


</androidx.constraintlayout.widget.ConstraintLayout>