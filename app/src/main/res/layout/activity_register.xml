<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".ui.Auth.RegisterActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="132dp"
            android:text="Register a new account"
            android:textColor="@color/black"
            android:textSize="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/register_edit_text_name_company"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="64dp"
            android:layout_marginEnd="4dp"
            android:background="@drawable/text_field_shape"
            android:hint="Name Company"
            android:inputType="textPersonName"
            android:textColor="@color/black"
            app:layout_constraintEnd_toStartOf="@+id/register_imageView"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/register_imageView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="24dp"
            android:src="@drawable/ic_baseline_person"
            app:civ_border_color="#FF000000"
            app:civ_border_width="1dp"

            app:layout_constraintBottom_toBottomOf="@+id/register_edit_text_name_company"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/register_edit_text_name_company" />


        <EditText
            android:id="@+id/register_edit_text_distributor_name"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/text_field_shape"
            android:hint="Distributor Name"
            android:inputType="textPersonName"
            android:textColor="@color/black"

            app:layout_constraintEnd_toEndOf="@+id/register_imageView"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/register_edit_text_name_company"
            app:layout_constraintTop_toBottomOf="@+id/register_edit_text_name_company" />

        <EditText
            android:id="@+id/register_edit_text_email"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/text_field_shape"
            android:hint="Email"
            android:inputType="textPersonName"
            android:textColor="@color/black"

            app:layout_constraintEnd_toEndOf="@+id/register_edit_text_distributor_name"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/register_edit_text_distributor_name"
            app:layout_constraintTop_toBottomOf="@+id/register_edit_text_distributor_name" />


        <EditText
            android:id="@+id/register_edit_text_password"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/text_field_shape"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColor="@color/black"

            app:layout_constraintEnd_toEndOf="@+id/register_edit_text_email"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/register_edit_text_email"
            app:layout_constraintTop_toBottomOf="@+id/register_edit_text_email" />


        <EditText
            android:id="@+id/register_edit_text_place"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/text_field_shape"
            android:hint="Place"
            android:inputType="textPersonName"
            android:textColor="@color/black"

            app:layout_constraintEnd_toEndOf="@+id/register_edit_text_number"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/register_edit_text_number"
            app:layout_constraintTop_toBottomOf="@+id/register_edit_text_number" />

        <EditText
            android:id="@+id/register_edit_text_number"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/text_field_shape"
            android:hint="Number"
            android:inputType="number"
            android:textColor="@color/black"

            app:layout_constraintEnd_toEndOf="@+id/register_edit_text_password"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/register_edit_text_password"
            app:layout_constraintTop_toBottomOf="@+id/register_edit_text_password" />

        <Button
            android:id="@+id/register_button"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:background="@drawable/shape_btn_black"
            android:text="register"
            android:textColor="@color/white"

            android:textSize="18dp"
            app:layout_constraintEnd_toEndOf="@+id/register_edit_text_place"
            app:layout_constraintHorizontal_bias="0.492"
            app:layout_constraintStart_toStartOf="@+id/register_edit_text_place"
            app:layout_constraintTop_toBottomOf="@id/register_edit_text_place" />

        <ProgressBar
            android:id="@+id/register_progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminateTint="@color/text_color"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>