<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="176dp"
    android:elevation="24dp"
    app:cardCornerRadius="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/item_order_name_pos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="20dp"
            android:text="Name POS"
            android:textSize="22sp"
            android:textColor="@color/text_color"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/item_order_name_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Name Product"
            android:textColor="@color/text_color"
            android:textSize="22sp"
            app:layout_constraintStart_toStartOf="@+id/item_order_name_pos"
            app:layout_constraintTop_toBottomOf="@+id/item_order_name_pos" />

        <TextView
            android:id="@+id/item_order_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Quantity"
            android:textColor="@color/text_color"
            android:textSize="22sp"
            app:layout_constraintStart_toStartOf="@+id/item_order_name_product"
            app:layout_constraintTop_toBottomOf="@+id/item_order_name_product" />

        <TextView
            android:id="@+id/item_order_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Size"
            android:textColor="@color/text_color"
            android:textSize="22sp"
            app:layout_constraintStart_toStartOf="@+id/item_order_quantity"
            app:layout_constraintTop_toBottomOf="@+id/item_order_quantity" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="88dp"
            android:layout_height="72dp"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.506"
            app:srcCompat="@drawable/item" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>